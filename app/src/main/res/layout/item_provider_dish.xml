<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">


    <TextView
        android:id="@+id/dish_name"
        android:textSize="@dimen/menu_font_size"
        android:text="Name"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dish_price"
        android:textSize="@dimen/menu_font_size"
        android:text="price"
        android:layout_toRightOf="@id/dish_name"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/modify_dish"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_margin="5dp"
        android:text="修改"
        android:background="@color/positive"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/delete_dish"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_margin="5dp"
        android:text="删除"
        android:background="@color/negative"
        android:textColor="@android:color/white"
        android:layout_toLeftOf="@id/modify_dish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>