<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:background="@color/title"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/title_font_size"
                    android:text="我"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/profile_modify"
                    android:textSize="@dimen/title_btn_font_size"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/title_btn_margin"
                    android:textColor="@android:color/white"
                    android:text="修改"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/profile_save"
                    android:textSize="@dimen/title_font_size"
                    android:text="保存"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/profile_cancel"
                    android:textSize="@dimen/title_font_size"
                    android:text="取消"
                    android:visibility="gone"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="@dimen/profile_text_size"
                        android:layout_alignParentLeft="true"
                        android:text="用户名"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:gravity="right"
                        android:enabled="false"
                        android:textSize="@dimen/profile_text_size"
                        android:id="@+id/profile_username"
                        android:layout_alignParentRight="true"
                        android:text="我是用户名"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="100dp"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="@dimen/profile_text_size"
                        android:layout_alignParentLeft="true"
                        android:text="邮箱"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:gravity="right"
                        android:enabled="false"
                        android:textSize="@dimen/profile_text_size"
                        android:id="@+id/profile_email"
                        android:layout_alignParentRight="true"
                        android:text="我是邮箱"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="100dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="@dimen/profile_text_size"
                        android:layout_alignParentLeft="true"
                        android:text="NetID账号"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:gravity="right"
                        android:enabled="false"
                        android:textSize="@dimen/profile_text_size"
                        android:id="@+id/profile_netid_account"
                        android:layout_alignParentRight="true"
                        android:text="我是NetID账号"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="100dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="@dimen/profile_text_size"
                        android:layout_alignParentLeft="true"
                        android:text="电话"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:gravity="right"
                        android:enabled="false"
                        android:textSize="@dimen/profile_text_size"
                        android:id="@+id/profile_phone_number"
                        android:layout_alignParentRight="true"
                        android:text="我是电话"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="100dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="@dimen/profile_text_size"
                        android:layout_alignParentLeft="true"
                        android:text="收货人"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:gravity="right"
                        android:enabled="false"
                        android:textSize="@dimen/profile_text_size"
                        android:id="@+id/profile_receiver"
                        android:layout_alignParentRight="true"
                        android:text="我是收货人"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="100dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="@dimen/profile_text_size"
                        android:layout_alignParentLeft="true"
                        android:text="收货地址"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:gravity="right"
                        android:enabled="false"
                        android:textSize="@dimen/profile_text_size"
                        android:id="@+id/profile_address"
                        android:layout_alignParentRight="true"
                        android:text="地址"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="100dp" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/logout"
                android:layout_margin="5dp"
                android:background="@color/negative"
                android:textColor="@android:color/white"
                android:text="注销"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>